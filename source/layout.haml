  %body{ :style => "background-color:transparent;"}
    .navbar.navbar-inverse.navbar-fixed-top{:role=>"navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
            Menu
            %span.sr-only Toggle navigation
            
          = link_to 'William Lawrence Camp', '/', class: 'navbar-brand'
        %div.collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.navbar-right
            %li=link_to  'Enroll Here', '/parents/enrollment-information.html', {:style=>'color: yellow;font-weight: bold;'}
            -['tour', 'campers', 'parents', 'tradition', 'news', 'connect'].each do |section|
              = partial "#{section}/subnavigation"
    #wrap
      #main
        .container
          = yield
    #footer_custom
      .container
        .row
          .col-sm-3.col-xs-4
            %p= link_to 'Staff', '/staff.html', target: :blank
            %p= link_to 'YouTube', 'http://www.youtube.com/user/WilliamLawrenceCamp', target: :blank
            %p= link_to 'Facebook', 'http://facebook.com/williamlawrencecamp', target: :blank
            %p= link_to 'Contact Us', '/connect/contact.html'
            %p= link_to 'Stay Informed', '/connect/mailing-list'
          .col-sm-6.col-xs-8
            %p 603-569-3698
            .copyright
              &copy; William Lawrence Camp,
              = Time.now.year
            %address_custom{ style: 'display block' }
              = link_to "139 Federal Corner Rd, PO Box 52, Ctr Tuftonboro, NH 03816", "/directions.html"
            .avand
              Website lovingly crafted by
              == #{link_to 'Avand Amiri', 'http://avandamiri.com'}, Bill Larry Boy &amp; Brave
            
            =link_to image_tag('/images/footer/ACA-logo.png', width:"40"),'http://find.acacamps.org/camp_profile.php?camp_id=1569'
          .col-sm-3.col-xs-12
            =partial "./shared/mailchimp_advertising"
