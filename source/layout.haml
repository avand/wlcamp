    .navbar.navbar-fixed-top{:role=>"navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
            Menu
          = link_to 'William Lawrence Camp', '/', class: 'navbar-brand'
        %div.collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.navbar-right
            %li=link_to  'Enroll Here', '/enroll.html', {:style=>'color: yellow;font-weight: bold;'}
            %li=link_to "Tour", "/tour"
            %li=link_to "Campers", "/campers"
            -['parents', 'tradition', 'news', 'contact-us'].each do |section|
              = partial "#{section}/subnavigation"

    #wrap
      = yield_content :premain
      %main
        .container
          = yield

    = partial "partials/footer"

    %script{ src: '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' }
    %script{ src: '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js' }
