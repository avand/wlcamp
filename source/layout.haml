%html
  %head
    %link{ :href => 'http://fonts.googleapis.com/css?family=Bitter:400italic,400,700|Permanent+Marker', :rel => 'stylesheet', :type => 'text/css' }/

    %meta{ :charset => "utf-8" }/
    %title= data.page.title
    %meta{ :name => "description", :content => data.page.description }/
    %meta{ :name => "author", :content => "" }/
    %meta{ :name => "keywords", :content => "boys overnight summer camp, summer camp, traditional camp, traditional overnight camp, new hampshire summer camps, new hampshire summer camp, summer camps in new hampshire, summer camp new hampshire, summer camps new hampshire, summer camp in new hampshire, overnight summer camps in new hampshire, new hampshire boy camps, boy camps new hampshire" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"}


    - background = request.path.gsub('.html', '.jpg')
    %meta{ :name => "background", :content => "/images/backgrounds/#{File.exists?('source/images/backgrounds/' + background) ? background : 'default.jpg'}" }

    %meta{ :name => "og:type", :content => "website" }
    %meta{ :name => "og:title", :content => data.page.title }
    %meta{ :name => "og:image", :content => "/images/og/logo.jpg" }
    %meta{ :name => "og:site_name", :content => "William Lawrence Camp - Do Something. This Summer!" }

    -# CSS: implied media="all"
    %link{ :href => "/stylesheets/bootstrap.min.css", :media => "all", :rel => "stylesheet" }/
    
    %link{ :href => "/stylesheets/custom.css?v=1", :media => "all", :rel => "stylesheet" }/


