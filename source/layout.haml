    - if ENV["RACK_ENV"] == "production"
      :javascript
        !function(g,s,q,r,d){r=g[r]=g[r]||function(){(r.q=r.q||[]).push(
        arguments)};d=s.createElement(q);q=s.getElementsByTagName(q)[0];
        d.src='//d1l6p2sc9645hc.cloudfront.net/tracker.js';q.parentNode.
        insertBefore(d,q)}(window,document,'script','_gs');

        _gs('GSN-575327-Q');

  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role=>"navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
          = link_to 'William Lawrence Camp', '/', class: 'navbar-brand'
        %div.collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.navbar-right
            -['tour', 'campers', 'parents', 'alumni', 'tradition', 'news'].each do |section|
              = partial "#{section}/subnavigation"
            %li= link_to 'Contact', '/contact.html'
    .container
      = yield
    #footer
      .container_12
        .col-xs-12.sans-serif
          .social
            %span.facebook= link_to 'Staff', '/staff.html', target: :blank
            &nbsp;&middot;&nbsp;
            %span.facebook= link_to 'Facebook', 'http://facebook.com/williamlawrencecamp', target: :blank
            &nbsp;&middot;&nbsp;
            %span.youtube= link_to 'YouTube', 'http://www.youtube.com/user/WilliamLawrenceCamp', target: :blank
            &nbsp;&middot;&nbsp;
            %span.aca= link_to 'Accredited by the American Camp Association', 'http://find.acacamps.org/camp_profile.php?camp_id=1569', target: :blank
            &nbsp;&middot;&nbsp;
            = mail_to "knoll@wlcamp.org", "Email us at knoll@wlcamp.org"
          %address{ style: 'display block' }
            = link_to "139 Federal Corner Rd, PO Box 52, Ctr Tuftonboro, NH 03816", "/directions.html"
            &nbsp;&middot;&nbsp;
            603-569-3698
          .avand
            Website lovingly crafted by
            == #{link_to 'Avand Amiri', 'http://avandamiri.com'}, Bill Larry Boy &amp; Brave
          .copyright
            &copy; William Lawrence Camp,
            = Time.now.year

    %script{:src=>'https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js'}
    %script{:src=>'//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js'}
    %script{ :src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" }
    %script{ :src => '/javascripts/libs/jquery.backstretch.min.js' }
    %script{ :src => '/javascripts/libs/jquery.cycle.lite.js' }
    %script{ :src => '/javascripts/libs/jquery.easing.js' }
    %script{ :src => '/javascripts/libs/flash-detect.min.js' }
    %script{ :src => '/javascripts/custom.js' }


    :javascript
      if (!Modernizr.video && !FlashDetect.installed){
        $("#flash-detect").show()
      }

    = yield_content :scripts

    - if ENV["RACK_ENV"] != "production"
      %script{ :src => "/javascripts/960gridder.js" }
